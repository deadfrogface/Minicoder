<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/minicode_background"
    tools:context=".MainActivity">

    <!-- Top bar: minimal, app identity -->
    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/app_name"
        android:textColor="@color/minicode_on_surface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Output area: card-style, fills space above input -->
    <ScrollView
        android:id="@+id/scrollOutput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/inputBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_output_card"
                android:elevation="2dp"
                android:minHeight="120dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvGeneratedContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:focusable="false"
                    android:inputType="none"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/minicode_on_surface"
                    android:textSize="13sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/btnCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="@string/copy"
                android:textColor="@color/minicode_accent"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Input bar: rounded, send arrow bottom-right (ChatGPT-style) -->
    <FrameLayout
        android:id="@+id/inputBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_input_bar"
        android:elevation="4dp"
        android:minHeight="56dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/etInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/instruction_hint"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="1"
            android:paddingEnd="48dp"
            android:paddingBottom="4dp"
            android:textColor="@color/minicode_on_surface"
            android:textColorHint="@color/minicode_on_surface_secondary"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnGenerate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:background="@drawable/bg_send_button"
            android:contentDescription="@string/generate"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send_arrow" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
